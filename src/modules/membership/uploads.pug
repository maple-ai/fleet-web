h2.text-primary Your photo
.form-group
	label Please take a selfie or upload passport-like photo
		span(*ngIf="(uploader_selfie.queue.length > 0 && uploader_selfie.queue[0]?.isSuccess) || status.license_selfie")  (upload completed)
		span.text-danger(*ngIf="uploader_selfie.error && uploader_selfie.error.length > 0")  (Error: {{ uploader_selfie.error }})
	input.form-control(type="file" ng2FileSelect, [uploader]="uploader_selfie", name="license_selfie", *ngIf="!status.license_selfie && (uploader_selfie.queue.length == 0 || !uploader_selfie.queue[0]?.isSuccess)")
	.progress
		.progress-bar([style.width.%]="uploader_selfie.queue[0]?.progress", max="100", *ngIf="!status.license_selfie")

h2.text-primary Passport
.form-group
	label Upload a picture of the page of your passport containing your picture and passport number
		span(*ngIf="(uploader_passport.queue.length > 0 && uploader_passport.queue[0]?.isSuccess) || status.license_passport")  (upload completed)
		span.text-danger(*ngIf="uploader_passport.error && uploader_passport.error.length > 0")  (Error: {{ uploader_passport.error }})
	input.form-control(type="file" ng2FileSelect, [uploader]="uploader_passport", name="license_passport", *ngIf="!status.license_passport && (uploader_passport.queue.length == 0 || !uploader_passport.queue[0]?.isSuccess)")
	.progress(*ngIf="!status.license_passport")
		.progress-bar([style.width.%]="uploader_passport.queue[0]?.progress", max="100")

