button.btn.btn-primary(*ngIf="!((status.utility_bill || uploader_utility.queue[0]?.isSuccess) && (status.license_selfie || uploader_selfie.queue[0]?.isSuccess) && (status.license_passport || uploader_passport.queue[0]?.isSuccess) && (status.license_back || uploader_back.queue[0]?.isSuccess) && (status.license_front || uploader_front.queue[0]?.isSuccess) && (status.license_cbt || uploader_cbt.queue[0]?.isSuccess))", (click)="uploadLicenses()") Upload Files
button.btn.btn-business(*ngIf="((status.utility_bill || uploader_utility.queue[0]?.isSuccess) || (status.license_selfie || uploader_selfie.queue[0]?.isSuccess) || (status.license_passport || uploader_passport.queue[0]?.isSuccess) || (status.license_back || uploader_back.queue[0]?.isSuccess) || (status.license_front || uploader_front.queue[0]?.isSuccess) || (status.license_cbt || uploader_cbt.queue[0]?.isSuccess))", (click)="resetUpload()", style="margin-left: 16px") Reset Uploads