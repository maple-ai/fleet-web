{
  "compileOnSave": false,
  "preserveWhitespaces": "off",
  "compilerOptions": {
    "outDir": "./dist/out-tsc",
    "sourceMap": true,
    "declaration": false,
    "module": "commonjs",
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es5",
    "typeRoots": [
      "node_modules/@types"
    ],
    "lib": [
      "es2017",
      "es2015",
      "dom"
    ]
  },
  "include" : [
    "node_modules/@sample-ts-lib/**/*.ts",
    "src/main.ts",
    "src/polyfills.ts"
  ],
}
